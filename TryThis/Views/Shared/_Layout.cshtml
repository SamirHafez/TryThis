@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    @Scripts.Render("~/scripts/libs")
    @Styles.Render("~/css/libs")
</head>
<body>
    <div class="overlay">

        @Html.Partial("_HelpPartial")
    </div>

    @RenderBody()

    @RenderSection("scripts", required: false)

    <footer class="footer">
        by <a href="http://compilinggibb.blogspot.pt/" target="_blank">Samir Hafez</a>
        <span class="actions">
            <a href="javascript: $('.overlay').css('visibility', 'visible');">Help</a>
        </span>
    </footer>
</body>
</html>
