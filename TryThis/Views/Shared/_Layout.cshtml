@using System.Web.Optimization
@using Microsoft.Web.Helpers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    @Scripts.Render("~/scripts/libs")
    @Styles.Render("~/css/libs")
    <link rel="shortcut icon" href="@Url.Content("favicon.ico")" />
</head>
<body>
    <div id="fb-root"></div>

    <div class="overlay">
        @Html.Partial("_HelpPartial")
    </div>

    @RenderBody()

    <footer class="footer">
        by <a href="http://compilinggibb.blogspot.pt/" target="_blank">Samir Hafez</a>
        <span class="actions">
            <a href="javascript: $('.overlay').css('visibility', 'visible');">Help</a>
        </span>
        <div>
            @Facebook.LikeButton("http://typerun.apphb.com", "button_count", false, height: 20, font: "segoe ui")
        </div>
    </footer>

    @RenderSection("scripts", required: false)
</body>
</html>
